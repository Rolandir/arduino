  checkFrontDistance
  if frontDistanceCm < maxFrontDistance
    checkLeftDistance, checkRightDistance
    (leftDistanceCm < rightDistanceCm) ? moveRight : moveLeft
  else moveForward();

  checkLeftDistance
  if leftDistanceCm < maxLeftDistance
    checkLeftDistance, checkRightDistance
    (leftDistanceCm > rightDistanceCm) ? moveForward : moveRight

  checkRightDistance
  if rightDistanceCm < maxRightDistance
    checkRightDistance, checkLeftDistance
    (rightDistanceCm > leftDistanceCm) ? moveForward : moveLeft
